    <script type="text/javascript" src="~/Scripts/bootstrap.js"></script>
    <script type="text/javascript" src="~/Scripts/umd/SmoothScroll.js"></script>
    <script type="text/javascript" src="~/Scripts/umd/jqBootstrapValidation.js"></script>
    <script type="text/javascript" src="~/Scripts/umd/contact_me.js"></script>
    <script type="text/javascript" src="~/Scripts/umd/main.js"></script>
</body>
</html>

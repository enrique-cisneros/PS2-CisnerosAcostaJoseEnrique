@model IEnumerable<PS2_CisnerosAcostaJoseEnrique.Models.Order>

@{
    ViewBag.Title = "Index";
}

<h2>Ordenes</h2>

<p>
    @Html.ActionLink("Crear orden", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Producto
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoOrden)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NombreCliente)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Menu.Producto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NoOrden)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NombreCliente)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

<img src="~/Content/img/menu.png" width="1200" height="400" class="center-block">
